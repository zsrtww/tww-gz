"twwgz/tex" = "../res/tex"

# fonts
"twwgz/fonts" = "../res/fonts"

# any% saves
"twwgz/save_files/any_percent.bin" = "../@TWWGZ_CFG_SAVE_ANY_PATH@/any_percent.bin"
"twwgz/save_files/any_percent" = "../@TWWGZ_CFG_SAVE_ANY_PATH@/any_percent"

# any% no_mss saves
"twwgz/save_files/any_no_mss.bin" = "../res/save_files/any_no_mss.bin"
"twwgz/save_files/any_no_mss" = "../res/save_files/any_no_mss"

# All Dungeons saves
"twwgz/save_files/all_dungeons.bin" = "../res/save_files/all_dungeons.bin"
"twwgz/save_files/all_dungeons" = "../res/save_files/all_dungeons"

# menu
"twwgz/mn/Menu1.dat" = "../res/menu/EN_Menu1.dat"

# REL modules
"twwgz/rels" = "modules/rels"